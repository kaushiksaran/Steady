{
    "manifest_version": 3,
    "name": "Stability Assist - Jitter Detection & Zoom",
    "description": "Helps users with tremors by zooming targets and enabling nod-clicking.",
    "version": "1.1",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Stability Assist"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "src/gesture_logic.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "scripting",
        "storage"
    ]
}